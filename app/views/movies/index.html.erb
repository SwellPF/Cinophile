<h1>Movie Listing</h1>
<b>Genre Filter:</b>

<table class="table">
    <thead>
        <tr><th colspan="3"></th></tr>
    </thead>
    <tbody>
        <tr>
            <td><strong>Name</strong></td>
            <td><strong>Genre</strong></td>
            <td><strong>Year Released</strong></td>
        </tr>
        <tr>
            <% @movies.each do |movie| %>
            <td><%= movie.title %> </td><td><%= movie.genre.name%></td><td><%=movie.year_released %></td>
        <td>
            <%= link_to "View", movie_path(movie), class: "button" %>  
            <% if current_user.admin? %>  
                <%= link_to "Edit", edit_movie_path(movie), class: "button" %>
               <% end %>
        </td>
        
        </tr><% end %>
    </tbody>
</table>
<% if logged_in? && current_user.admin? %>
    <%= link_to 'Add New Movie', new_movie_path, class: "button" %>
    <%= button_to "Add New Movie", new_movie_path, :method => "get" %>
<% end %>